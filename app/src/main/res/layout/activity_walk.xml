<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/toolbar"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:id="@+id/include" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="?attr/actionBarSize"
        android:id="@+id/imageView5"
        android:background="@drawable/walk_menu"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="100dp"
        android:paddingBottom="20dp"
        android:textColor="@color/colorPrimary"
        android:id="@+id/countText"
        android:layout_below="@+id/pedometerButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="81dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="만보기시작하기"
        android:backgroundTint="@color/colorPrimary"
        android:id="@+id/pedometerButton"

        android:layout_below="@+id/imageView5"
        android:layout_alignParentEnd="true" />

    <com.cookandroid.myapplication.GraphicsView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/view"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0 kcal"
        android:textSize ="30dp"
        android:textColor = "@color/colorPrimary"
        android:id="@+id/calText"
        android:layout_alignBottom="@+id/countText"
        android:layout_centerHorizontal="true" />

</RelativeLayout>