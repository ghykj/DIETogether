<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:id="@+id/m">

    <include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/toolbar"
        layout="@layout/toolbar"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="200dp"
        android:layout_height="250dp"
        android:id="@+id/overweight"
        android:background="@drawable/main_overweight"
        android:scaleType="fitXY"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:visibility="invisible"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="?attr/actionBarSize"
        android:id="@+id/imageView5"
        android:background="@drawable/home_menu"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="200dp"
        android:layout_height="250dp"
        android:id="@+id/skinny"
        android:background="@drawable/main_skinny"
        android:layout_centerVertical="true"
        android:layout_alignEnd="@+id/overweight"
        android:visibility="invisible"/>

    <ImageView
        android:layout_width="200dp"
        android:layout_height="250dp"
        android:id="@+id/standard"
        android:background="@drawable/main_standard"
        android:layout_centerVertical="true"
        android:layout_alignEnd="@+id/overweight"
        android:visibility="invisible"/>

    <ImageView
        android:layout_width="200dp"
        android:layout_height="250dp"
        android:id="@+id/obesity"
        android:background="@drawable/main_obesity"
        android:layout_centerVertical="true"
        android:layout_alignEnd="@+id/overweight"
        android:visibility="invisible"/>

</RelativeLayout>