<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/toolbar"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:id="@+id/include" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:paddingTop="30dp"
        android:paddingBottom="10dp"
        android:paddingLeft="30dp"
        android:paddingRight="20dp"

        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="아이디"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:id="@+id/textView11"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="49dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="30dp"
        android:paddingRight="20dp"

        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="이름"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:id="@+id/textView"
        android:layout_below="@+id/textView11"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="30dp"
        android:paddingRight="20dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="나이"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:id="@+id/textView3"
        android:layout_below="@+id/textView2"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="30dp"
        android:paddingRight="20dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="키"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:id="@+id/textView4"
        android:layout_below="@+id/textView3"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="30dp"
        android:paddingRight="20dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="몸무게"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:id="@+id/textView5"
        android:layout_below="@+id/textView4"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="30dp"
        android:paddingRight="20dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="BMI지수"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:id="@+id/textView6"
        android:layout_below="@+id/textView5"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="211dp"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="30dp"
        android:paddingRight="20dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="체질량 지수는"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:id="@+id/textView7"
        android:layout_below="@+id/textView6"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/textView10" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="30dp"
        android:paddingRight="20dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="성별"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:id="@+id/textView2"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="세"
        android:paddingBottom="10dp"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:id="@+id/textView8"
        android:layout_alignBottom="@+id/signAge"
        android:layout_toEndOf="@+id/signAge" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="cm"
        android:paddingBottom="10dp"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:id="@+id/textView9"
        android:layout_alignBottom="@+id/signHeight"
        android:layout_toEndOf="@+id/signHeight" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="kg"
        android:paddingBottom="10dp"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:id="@+id/textView10"
        android:layout_alignBottom="@+id/signWeight"
        android:layout_toEndOf="@+id/signWeight" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:paddingBottom="10dp"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold"
        android:textSize="20dp"
        android:id="@+id/signBMI"
        android:layout_above="@+id/textView7"
        android:layout_toEndOf="@+id/textView6" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:paddingBottom="10dp"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold"
        android:textSize="20dp"
        android:id="@+id/signBMI2"
        android:layout_alignBottom="@+id/textView7"
        android:layout_centerHorizontal="true" />

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="10dp"
        android:layout_below="@+id/textView"
        android:layout_toEndOf="@+id/textView6"
        android:id="@+id/signRadioGroup">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="@color/colorPrimary"
            android:textColor="#000000"
            android:text="남성"
            android:id="@+id/signMale"
            android:checked="false" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="@color/colorPrimary"
            android:textColor="#000000"
            android:text="여성"

            android:id="@+id/signFemale"
            android:checked="false" />

    </RadioGroup>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:textColor="#000000"
        android:ems="10"
        android:backgroundTint="@color/colorPrimary"
        android:id="@+id/signName"
        android:layout_above="@+id/signRadioGroup"
        android:layout_alignStart="@+id/signRadioGroup"
        android:layout_alignEnd="@+id/signButton" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="3"
        android:textColor="#000000"
        android:backgroundTint="@color/colorPrimary"
        android:id="@+id/signAge"
        android:layout_alignStart="@+id/radioGroup"
        android:layout_alignBottom="@+id/textView3"
        android:layout_alignEnd="@+id/signHeight" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="3"
        android:text=""
        android:textColor="#000000"
        android:backgroundTint="@color/colorPrimary"
        android:id="@+id/signHeight"
        android:layout_above="@+id/textView5"
        android:layout_toEndOf="@+id/textView6" />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:textColor="#000000"
        android:ems="3"
        android:text=""
        android:backgroundTint="@color/colorPrimary"
        android:id="@+id/signWeight"
        android:layout_above="@+id/textView6"
        android:layout_alignStart="@+id/signHeight"
        android:layout_alignEnd="@+id/signHeight" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="정보 등록"
        android:textSize="20dp"
        android:paddingBottom="10dp"
        android:id="@+id/signButton"
        android:layout_above="@+id/include"
        android:layout_alignEnd="@+id/signRadioGroup" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="?attr/actionBarSize"
        android:id="@+id/imageView5"
        android:background="@drawable/login_menu"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:textColor="#000000"
        android:ems="10"
        android:backgroundTint="@color/colorPrimary"
        android:id="@+id/signID"
        android:layout_above="@+id/signName"
        android:layout_alignEnd="@+id/signName"
        android:layout_toEndOf="@+id/signBMI" />


</RelativeLayout>